{
  "manifest_version": 3,
  "name": "Gobble Task Filter",
  "version": "1.0",
  "description": "Filter tasks by assignee name",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://roilift.gobblecrm.com/admin/task"],
      "js": ["assets/js/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}